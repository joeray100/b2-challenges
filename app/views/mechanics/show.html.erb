<h1>Mechanic</h1>

<h2><%= @mechanic.name %>: </h2>
  <p>Years of Experience: <%= @mechanic.years_experience %></p>
  <p>Rides working on: </p>
  <% @mechanic_rides.each do |ride| %>
  <ul>
  <p><%= ride.name %></p>
  </ul>
<% end %><br/>

<p>Add a ride to workload: </p>
<%= form_with url: mechanic_path(@mechanic), method: :get, local: true do |f| %>
  <%= f.label :search, "Ride Id:" %>
  <%= f.text_field :search %>
  <%= f.submit 'Submit' %>
<% end %>
